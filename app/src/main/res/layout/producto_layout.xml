<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/racyclerProductoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco">

    <ImageView
        android:id="@+id/imagenPublicacionId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tituloPublicacionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/gris"
        app:layout_constraintStart_toEndOf="@+id/imagenPublicacionId"
        app:layout_constraintTop_toTopOf="@+id/imagenPublicacionId" />

    <TextView
        android:id="@+id/precioPublicacionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/gris"
        app:layout_constraintBottom_toBottomOf="@+id/imagenPublicacionId"
        app:layout_constraintStart_toStartOf="@+id/tituloPublicacionId" />

</androidx.constraintlayout.widget.ConstraintLayout>